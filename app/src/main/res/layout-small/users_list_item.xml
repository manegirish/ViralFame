<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:id="@+id/users_list_item_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/users_list_item_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_avtar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <TextView
                android:id="@+id/users_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="start|center_vertical"
                android:text="@string/dummy_name"
                android:textColor="@color/black_95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/users_list_item_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/dummy_role"
                android:textColor="@color/black_65"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/users_list_item_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black_45"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:text="@string/app_name"
        android:clickable="false"
        android:visibility="gone"/>
</LinearLayout>