<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/about_me_header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/about_me_post_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_left_white"
        android:layout_alignParentLeft="true"
        android:padding="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/about_me"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"/>
    <TextView
        android:id="@+id/about_me_post_save"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/save"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:minWidth="90dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textAllCaps="true"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/about_me_header"
        android:background="@color/black_ec">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_layout_shadow"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="About Me"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>'
            <EditText
                android:id="@+id/about_me_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_vertical"
                android:textColor="@color/black_95"
                android:hint="@string/comment_hint"
                android:padding="10dp"
                android:textSize="18sp"
                android:minHeight="55dp"
                android:imeOptions="actionDone"
                android:inputType="textImeMultiLine"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/status_layout_shadow"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Select From Default"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/black_45"
                android:dividerHeight="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/about_me_default_status_list"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
