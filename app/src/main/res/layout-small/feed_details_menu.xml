<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_details_menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_menu_layout"
        android:orientation="vertical"
        android:padding="1.5dp">

        <LinearLayout
            android:id="@+id/feed_details_menu_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:onClick="saveFile"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_download_g" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@string/save_media"
                android:textAllCaps="false"
                android:textColor="@color/black_95"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="0.3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_e6" />

        <LinearLayout
            android:id="@+id/feed_details_menu_copy"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:onClick="copyLink"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_copy_g" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@string/copy_link"
                android:textAllCaps="false"
                android:textColor="@color/black_95"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="0.3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_e6" />

        <LinearLayout
            android:id="@+id/feed_details_menu_remove"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:onClick="deleteFeed"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feed_details_menu_remove_icon"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:src="@drawable/ic_remove_g" />

            <TextView
                android:id="@+id/feed_details_menu_remove_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@string/remove"
                android:textAllCaps="false"
                android:textColor="@color/black_95"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="0.3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_e6" />

        <LinearLayout
            android:id="@+id/feed_details_menu_spam"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:onClick="spamFeed"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_spam_g" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@string/spam"
                android:textAllCaps="false"
                android:textColor="@color/black_95"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>