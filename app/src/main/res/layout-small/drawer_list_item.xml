<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drawer_list_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:src="@drawable/ic_home" />

    <TextView
        android:id="@+id/drawer_list_item_counter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/pink_circle"
        android:gravity="center"
        android:text="123"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drawer_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/drawer_list_item_icon"
        android:layout_toStartOf="@+id/drawer_list_item_counter"
        android:gravity="start|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/black_95"
        android:textSize="14sp" />
</RelativeLayout>