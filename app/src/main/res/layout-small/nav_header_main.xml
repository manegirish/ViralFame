<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="@dimen/nav_header_height"
    android:layout_alignParentTop="true"
    android:background="@drawable/ic_profile_pic_square"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/nav_header_main_layout"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/background_layout">
    <ImageView
        android:id="@+id/nav_header_photo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_profile_pic_circle" />

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/dummy_name"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black_95"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nav_header_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black_75"
        android:textStyle="bold"
        android:text="@string/dummy_role" />
    </LinearLayout>

</RelativeLayout>
