<android.support.v7.widget.Toolbar
    android:id="@+id/activity_toolbar_search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:elevation="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">
        <ImageView
            android:id="@+id/activity_toolbar_search_button"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:src="@drawable/ic_search_white"
            android:layout_alignParentEnd="true"
            android:padding="13dp"/>
        <ImageView
            android:id="@+id/activity_toolbar_search_back"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:src="@drawable/ic_left_white"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:layout_marginStart="-15dp"/>
        <TextView
            android:id="@+id/activity_toolbar_search_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_toEndOf="@+id/activity_toolbar_search_back"
            android:layout_toStartOf="@+id/activity_toolbar_search_button"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_toEndOf="@+id/activity_toolbar_search_back"
            android:layout_toStartOf="@+id/activity_toolbar_search_button"
            android:textStyle="normal"
            android:background="@android:color/transparent"
            android:hint="@string/search_here"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/white_cursor"
            android:id="@+id/activity_toolbar_search_box"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>