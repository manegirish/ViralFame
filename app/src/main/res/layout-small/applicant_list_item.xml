<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/applicant_list_item_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/applicant_list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_avtar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/applicant_list_item_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/applicant_list_item_actions_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/applicant_list_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_verify_user"
                    android:gravity="start"
                    android:text="@string/dummy_name"
                    android:textColor="@color/black_95"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/applicant_list_item_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/dummy_role"
                    android:textColor="@color/black_65"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/applicant_list_item_actions_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/applicant_list_item_action_reject"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:src="@drawable/ic_reject" />

                <ImageView
                    android:id="@+id/applicant_list_item_action_accept"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_accept" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/applicant_list_item_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/app_name"
        android:textColor="@color/black_45"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>